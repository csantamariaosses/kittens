
      <div class="row">
        <div class="col-3"></div>
        <div class="col-6">
              <div class="card">
                <div class="card-header">Admin</div>
                <div class="card-body">
                  <form class="form" action="/login" method="post">

                    {{#if statusMessage }}
                        <span>{{statusMessage}}</span>
                    {{/if}}
                    <div class="mb-3 mt-3">
                      <label for="user"></label>
                      <input type="text" name="user" autofocus placeholder="Usuario" required>
                    </div>

                    <div class="mb-3">
                      <label for="password"></label>
                      <input type="password" name="password" autofocus placeholder="Password" required>
                    </div>
                      
                      
                    <div class="mb-3">
                      <div class="btn"></div>
                        <input type="reset" value="Limpiar">
                        <input type="submit" value="Ingresar">
                      </div>
                    </div>
                      
                    </form>
                  </div>  <!-- card body-->
              </div> <!-- card -->
          </div>  <!-- col-6 -->
          <div class="col-3"></div>
      </div>  <!-- row -->



  