<div class="container">
  <div class="row">
     <div class="col-3"></div>
     <div class="col-6">
          <div class="card">
            <div class="card-header">Formulario de contacto</div>
            <div class="card-body">
              <form class="form" action="/contacto" method="post">

                {{#if statusMessage }}
                    <span>{{statusMessage}}</span>
                {{/if}}
                <div class="mb-3 mt-3">
                  <label for="nombre"></label>
                  <input type="text" name="nombre" autofocus placeholder="Nombre" required>
                </div>

                <div class="mb-3">
                  <label for="apellido"></label>
                  <input type="text" name="apellido" autofocus placeholder="Apellido" required>
                </div>
                  
                <div class="mb-3">
                  <label for="email"></label>
                  <input type="email" name="email" autofocus placeholder="Email" required>
                </div>
                  
                <div class="mb-3">
                  <label for="mensaje"></label>
                  <textarea name="mensaje" cols="30" rows="6" placeholder="Su mensaje aqui"></textarea>
                </div>
                  
                <div class="mb-3">
                  <div class="btn"></div>
                    <input type="reset" value="Limpiar">
                    <input type="submit" value="Enviar">
                  </div>
                </div>
                  
                </form>
              </div>

            </div>
      </div>
      <div class="col-3"></div>
  </div>
  

</div>
  